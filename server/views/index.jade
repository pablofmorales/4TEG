include layout

block scripts prepend
    script(src="http://maps.google.com/maps/api/js?sensor=true")

block scripts append
    script(src="/js/4teg.js")

block content
    body(onload="initialize()")
        div(data-role="page", id="map", align="center")
            div(data-role="header")
                h1 4TEG Map
            div(data-role="content")
                div.ui-corner-all.ui-bar-c.ui-shadow(style="padding:.5em")
                    div#map_canvas(style="height:350px")
                input.ui-shadow(type="button", data-icon="star", data-role="button", value="Check-in!", onclick="checkin('/explore')")
                input.ui-shadow(type="button", data-icon="gear", data-role="button", value="My profile", onclick="checkin('/user')")
                a(href="/logout", data-role="button") Logout
