include layout

block scripts prepend
    meta(name="viewport", content="initial-scale=1.0, user-scalable=no")
    script(src="http://maps.google.com/maps/api/js?sensor=true")

block scripts append
    script(src="/js/4teg.js")

block content
    body(onload="initialize()")
        div(data-role="page", id="map", align="center")
            div(data-role="header")
                h1 4TEG Map
            div(data-role="content")
                div.ui-corner-all.ui-bar-c.ui-shadow(style="padding:1em")
                    div#map_canvas(style="height:400px")
                input.ui-shadow(type="button", data-icon="star", data-role="button", value="Check-in!", onclick="checkin('/explore')")
            div(data-role="footer")
                p &copy; 2012 4TEG
